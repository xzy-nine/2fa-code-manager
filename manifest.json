{  "manifest_version": 3,
  "name": "2FA 验证码管家",
  "version": "1.0.1",
  "description": "安全的2FA验证码存储和自动填充扩展，支持WebDAV云端同步",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "webRequest",
    "identity",
    "desktopCapture"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_title": "2FA 验证码管家",
    "default_icon": {
      "16": "favicon.png",
      "32": "favicon.png",
      "48": "favicon.png",
      "128": "favicon.png"
    }
  },
  "icons": {
    "16": "favicon.png",
    "32": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["js/crypto.js", "js/totp.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
